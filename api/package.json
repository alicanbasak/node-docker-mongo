{
  "name": "node-docker-mongo",
  "version": "1.0.0",
  "description": "A Node.js application using Express and Mongoose, containerized with Docker",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start:dev": "nodemon --env-file=.env.development src/index.js",
    "docker:build": "docker build -t node-docker-mongo:latest-dev .",
    "docker:run": "docker run --name api node-docker-mongo:latest-dev",
    "docker:stop": "docker stop api"
  },
  "author": "Alican Basak",
  "license": "ISC",
  "dependencies": {
    "express": "^4.19.2",
    "nodemon": "^3.1.0"
  }
}
